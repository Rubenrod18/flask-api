# Flask
FLASK_APP=manage.py
FLASK_CONFIG=config.ProdConfig
FLASK_ENV=production  # production or development
## Local env example: flask-api.local:5000
SERVER_NAME=flask-api.prod

# Flask-Security-Too
SECRET_KEY=  # generated using: secrets.token_urlsafe()
SECURITY_PASSWORD_SALT=  # generated using: secrets.SystemRandom().getrandbits(128)

# Flask-SQLAlchemy
SQLALCHEMY_DATABASE_URI=sqlite:////path/prod.db

# Flask-Mail
MAIL_SERVER=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=
MAIL_USE_SSL=

# Celery
## RabbitMQ by default: pyamqp://guest:guest@rabbitmq:5672//
CELERY_BROKER_URL=pyamqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=db+sqlite:////path/flask_api/prod.db
CELERY_TIMEZONE=UTC

# Flask Swagger UI
SWAGGER_URL=
SWAGGER_API_URL=

# Mr Developer
HOME=/home/username
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
TEST_SQLALCHEMY_DATABASE_URI=sqlite:////path/flask_api/test.db